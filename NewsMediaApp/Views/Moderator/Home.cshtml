@using NewsMedia.Infrastructure.DTOS.Entities.Article.Get
@model List<GetArticleFullDto>
<div class="container">

    <div class="row">
        <div class="col-md">
            <!-- Adjust the column width to fit 3 cards per row -->
            <form asp-action="AddArticle" asp-controller="Moderator" method="get">
                <button type="submit" class="btn btn-primary">Add Article</button>
            </form>


            <form asp-action="GetAllArticles" asp-controller="Moderator" method="get">
                <button type="submit" class="btn btn-primary">All Articles</button>
            </form>

            <div class="card custom-card">

                <div class="card-body">
                    @foreach (var item in Model)
                    {
                        <h5 class="card-title">@item.Name</h5>
                        <p>@item.Category.Name</p>
                        <p class="card-text">@item.AddDate.ToString("MMM dd, yyyy HH:mm")</p>
                        <img src="~/images/@(item.ArticleTitleFile.FileName)" class="card-img img-fluid" alt="...">
                        @foreach (var tag in item.Tags)
                        {
                            <p>@tag.Name</p>
                        }
                    }
                    @* <a asp-action="UpdateArticle" asp-controller="News" asp-route-id="@item.Id"> this is update</a> *@
                </div>
            </div>
        </div>
    </div>
</div>