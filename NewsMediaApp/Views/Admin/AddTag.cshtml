@using NewsMedia.Infrastructure.DTOS.Entities.Tag.Post
@model AddTagDto
<form method="post" asp-controller="Admin" asp-action="AddTag">
	@Html.AntiForgeryToken()
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Tag</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Admin" asp-action="AddTag" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>